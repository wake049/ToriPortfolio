{
  "compilerOptions": {
    "outDir": "server-dist",
    "rootDir": ".",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "pg"]
  },
  "include": [
    "server.ts",
    "cloudinary.ts",
    "auth.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client",
    "public"
  ]
}