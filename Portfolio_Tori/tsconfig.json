{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "server-dist",
    "rootDir": ".",
    "allowJs": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": [
    "server.ts",
    "cloudinary.ts",
    "auth.ts",
    "types"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client",
    "public"
  ]
}
